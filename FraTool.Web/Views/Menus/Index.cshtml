@model dSecurity.Model.Menu
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row rowtop">
    <div class="col-md-12">
        <div class="card card-info card-outline collapsed-card" id="entry-ui">
            <div class="card-header">
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                        <i class="fas fa-plus"></i>&nbsp;&nbsp; Add Menu
                    </button>
                </div>
            </div>
            <div class="card-body">
                <div class="col-md-6">
                    <form asp-action="Create" class="form-horizontal">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="text" id="MenuId" name="MenuId" value="0" hidden />
                        <div class="form-group row">
                            <label asp-for="DisplayName" class="control-label text-md-right text-sm-left col-md-4"></label>
                            <div class="col-md-8">
                                <input asp-for="DisplayName" autocomplete="off" class="form-control" placeholder="display name" />
                                <span asp-validation-for="DisplayName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="ControllerName" class="control-label text-md-right text-sm-left col-md-4"></label>
                            <div class="col-md-8">
                                <input asp-for="ControllerName" autocomplete="off" class="form-control" placeholder="controller name" />
                                <span asp-validation-for="ControllerName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="ActionName" class="control-label text-md-right text-sm-left col-md-4"></label>
                            <div class="col-md-8">
                                <input asp-for="ActionName" autocomplete="off" class="form-control" placeholder="action name" />
                                <span asp-validation-for="ActionName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="MenuUrl" class="control-label text-md-right text-sm-left col-md-4"></label>
                            <div class="col-md-8">
                                <input asp-for="MenuUrl" class="form-control" placeholder="menu url" />
                                <span asp-validation-for="MenuUrl" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="IsParentMenu" class="control-label text-md-right text-sm-left col-md-4"></label>
                            <div class="col-md-8">
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-md-6 col-sm-6">
                                            <div class="icheck-primary d-inline">
                                                <input type="radio" id="radioPrimary1" name="IsParentMenu" value="Yes">
                                                <label for="radioPrimary1">
                                                    Yes
                                                </label>                                                
                                            </div>
                                            &nbsp;&nbsp;
                                            <div class="icheck-primary d-inline">
                                                <input type="radio" id="radioPrimary2" name="IsParentMenu" value="No">
                                                <label for="radioPrimary2">
                                                    No
                                                </label>
                                            </div>
                                        </div>
                                        @*<div class="col-md-2 col-sm-6">
                                            <div class="icheck-primary d-inline">
                                                <input type="radio" id="radioPrimary2" name="IsParentMenu" value="No">
                                                <label for="radioPrimary2">
                                                    No
                                                </label>
                                            </div>
                                        </div>*@
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="ParentMenuId" class="control-label text-md-right text-sm-left col-md-4"></label>
                            <div class="col-md-8">
                                <select id="ParentMenuId" class="form-control select2 select2-hidden-accessible" style="width: 100%;" data-select2-id="1" tabindex="-1" aria-hidden="true">
                                    <option value="0">--Select--</option>                                    
                                </select>                                
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="IconTag" class="control-label text-md-right text-sm-left col-md-4"></label>
                            <div class="col-md-8">
                                <input asp-for="IconTag" autocomplete="off" class="form-control" placeholder="icon tag name" />
                                <span asp-validation-for="IconTag" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="offset-md-4 col-md-8">
                                <input type="button" id="btnSubmit" value="Save" class="btn btn-success" />
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row rowtop">
    <div class="col-md-12">
        <div class="card card-success card-outline">
            <div class="card-header">
                <h3 class="card-title">All Menus</h3>
            </div>
            <div class="card-body">
                <table class="table table-bordered table-hover" id="menuTable">
                    <thead>
                        <tr class="bg-success">
                            <th>Display Name</th>
                            <th>Controller</th>
                            <th>Action</th>
                            <th>Url</th>
                            <th>Menu Type</th>
                            <th>Parent Menu</th>
                            <th data-orderable="false">Icon</th>
                            <th>Status</th>
                            <th data-orderable="false"></th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/js/security/menu.js"></script>
    <script></script>
}

