
@{
    ViewData["Title"] = "Scholarship";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row rowtop">
    <div class="col-md-12">
        <div class="card card-primary card-outline">            
            <div class="card-body">
                <form class="form-horizontal">
                    <div class="row">
                        <div class="col-md-6">
                            <input id="RecordId" value="0" hidden type="text" />
                            <div class="form-group row">
                                <label class="control-label text-md-right text-sm-left col-md-4">Assessment Year <span class="text text-danger">*</span></label>
                                <div class="col-md-4">
                                    <select id="AssessmentYear" class="form-control select2 select2-hidden-accessible" style="width: 100%;" data-select2-id="1" tabindex="1" aria-hidden="true">
                                        <option value="0">--Select--</option>
                                    </select>
                                </div>
                                <div class="col-md-4">
                                    <input type="button" id="btnSearch" value="Search" class="btn btn-primary" />
                                </div>
                            </div>
                        </div>                        
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<div class="row rowtop" id="scholarshipDiv">
    <div class="col-md-12">
        <div class="card card-success card-outline">
            <div class="card-header">
                <h3 class="card-title">Student List for Scholarship</h3>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover display dataTable" id="rTable" style="font-size:14px !important;">
                        <thead>
                            <tr class="bg-success">
                                <th>Student Name</th>
                                <th>Parent's Name</th>
                                <th>Date of Birth</th>
                                <th>Bank Name</th>
                                <th>Branch</th>
                                <th>Account No.</th>
                                <th>Branch Routing No.</th>
                                <th>Amount</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/macalms/scholarship.js"></script>
    <script></script>
}

