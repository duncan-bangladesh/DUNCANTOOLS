
@{
    ViewData["Title"] = "Employee";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row rowtop">
    <div class="col-md-12">
        <div class="card card-primary card-outline collapsed-card" id="entry-ui">
            <div class="card-header">
                <div class="card-tools">
                    <button type="button" class="btn btn-tool text-bold" data-card-widget="collapse" id="btntool">
                        <i class="fas fa-plus"></i>&nbsp;&nbsp; Add Employee Profile
                    </button>
                </div>
            </div>
            <div class="card-body">
                <form class="form-horizontal">
                    <div class="row">
                        <div class="col-md-6">
                            <input id="RecordId" value="0" hidden type="text" />
                            
                            <div class="form-group row">
                                <label class="control-label text-md-right text-sm-left col-md-4">Code <span class="text text-danger">*</span></label>
                                <div class="col-md-8">
                                    <input id="EmployeeCode" autocomplete="off" class="form-control" tabindex="1" placeholder="employee code" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="control-label text-md-right text-sm-left col-md-4">Full Name <span class="text text-danger">*</span></label>
                                <div class="col-md-8">
                                    <input id="EmployeeName" autocomplete="off" class="form-control" tabindex="2" placeholder="employee name" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="control-label text-md-right text-sm-left col-md-4">Department <span class="text text-danger">*</span></label>
                                <div class="col-md-8">
                                    <select id="DepartmentId" class="form-control select2 select2-hidden-accessible" style="width: 100%;" data-select2-id="1" tabindex="3" aria-hidden="true">
                                        <option value="0">--Select--</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="control-label text-md-right text-sm-left col-md-4">Designation <span class="text text-danger">*</span></label>
                                <div class="col-md-8">
                                    <select id="DesignationId" class="form-control select2 select2-hidden-accessible" style="width: 100%;" data-select2-id="2" tabindex="4" aria-hidden="true">
                                        <option value="0">--Select--</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="control-label text-md-right text-sm-left col-md-4">Working In </label>
                                <div class="col-md-8">
                                    <select id="WorkingIn" class="form-control select2 select2-hidden-accessible" style="width: 100%;" data-select2-id="3" tabindex="5" aria-hidden="true">
                                        <option value="">--Select--</option>                                       
                                    </select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="control-label text-md-right text-sm-left col-md-4">Email </label>
                                <div class="col-md-8">
                                    <input id="EmailAddress" autocomplete="off" class="form-control" tabindex="6" placeholder="email address" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="control-label text-md-right text-sm-left col-md-4">Mobile </label>
                                <div class="col-md-8">
                                    <input id="ContactNumber" autocomplete="off" class="form-control" tabindex="6" placeholder="mobile number" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="control-label text-md-right text-sm-left col-md-4">Applicable From </label>
                                <div class="col-md-8">
                                    <div class="input-group date">
                                        <input type="text" id="ApplicableFrom" autocomplete="off" placeholder="applicable date" tabindex="4" class="form-control">
                                    </div>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="control-label text-md-right text-sm-left col-md-4">Applicable up-to </label>
                                <div class="col-md-8">
                                    <div class="input-group date">
                                        <input type="text" id="ApplicableUpto" autocomplete="off" placeholder="resignation date" tabindex="4" class="form-control">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group row">
                                <div class="offset-md-4 col-md-8">
                                    <input type="button" id="btnSubmit" value="Save" class="btn btn-success" />
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<div class="row rowtop">
    <div class="col-md-12">
        <div class="card card-success card-outline">
            <div class="card-header">
                <h3 class="card-title">Employee Lists</h3>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover display dataTable" id="rTable" style="font-size:14px !important;">
                        <thead>
                            <tr class="bg-success">
                                <th>Code</th>
                                <th>Employee Name</th>
                                <th>Department</th>
                                <th>Designation</th>
                                <th>Working In</th>
                                <th>Email</th>
                                <th>Mobile</th>
                                <th>Job Status</th>
                                <th data-orderable="false"></th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/macalms/employee_profile.js"></script>
    <script></script>
}