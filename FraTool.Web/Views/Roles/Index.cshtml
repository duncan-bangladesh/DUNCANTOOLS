@model dSecurity.Model.Role
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row rowtop">
    <div class="col-md-12">
        <div class="card card-info card-outline collapsed-card">
            <div class="card-header">
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                        <i class="fas fa-plus"></i> &nbsp;&nbsp; Add New Role
                    </button>
                </div>
            </div>
            <div class="card-body">
                <div class="col-md-6">
                    <form asp-action="Create" class="form-horizontal">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input id="RoleId" value="0" hidden type="text" />
                        <div class="form-group row">
                            <label asp-for="RoleName" class="control-label text-md-right text-sm-left col-md-4"></label>
                            <div class="col-md-8">
                                <input asp-for="RoleName" autocomplete="off" class="form-control" placeholder="role name" />
                                <span asp-validation-for="RoleName" class="text-danger"></span>
                            </div>
                        </div>                        
                        <div class="form-group row">
                            <div class="offset-md-4 col-md-8">
                                <input type="button" id="btnSubmit" value="Save" class="btn btn-success" />
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row rowtop">
    <div class="col-md-12">
        <div class="card card-success card-outline">
            <div class="card-header">
                <h3 class="card-title">User Roles</h3>
            </div>
            <div class="card-body">
                <table class="table table-bordered table-hover" id="roleTable">
                    <thead>
                        <tr class="bg-success">
                            <th>Role Name</th>
                            <th>Status</th>
                            @*<th>Edit</th>*@
                            <th data-orderable="false"></th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/js/security/roles.js"></script>
    <script></script>
}

