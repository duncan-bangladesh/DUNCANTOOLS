
@{
    ViewData["Title"] = "RoleWiseUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row rowtop">
    <div class="col-md-12">
        <div class="card card-info card-outline">
            <div class="card-header">
                <h3 class="card-title">Add User to Role</h3>
            </div>
            <div class="card-body">
                <div class="col-md-6">
                    <form>
                        <div class="form-group row">
                            <label class="control-label text-md-right text-sm-left col-md-4">Role Name</label>
                            <div class="col-md-8">
                                <select id="RoleId" class="form-control select2 select2-hidden-accessible" style="width: 100%;" data-select2-id="1" tabindex="-1" aria-hidden="true">
                                    <option value="0">--Select--</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="icheck-primary offset-md-4 col-md-8">
                                <input type="checkbox" id="AllCheckBox" value="">
                                <label for="AllCheckBox">
                                    Check All
                                </label>
                            </div>
                        </div>
                        <div class="leftCheckList" style="padding-left: 30px">
                            <div class="form-group row" id="userlist">
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="offset-md-4 col-md-8">
                                <input type="button" id="btnSubmit" value="Save" class="btn btn-success" />
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/js/security/rolewiseuser.js"></script>
    <script></script>
}
