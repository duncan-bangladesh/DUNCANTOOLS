
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        Get Journal Voucher
    </div>
    <div class="card-body">
        <form class="form-horizontal">
            <div class="row">
                <div class="form-group row">
                    <label class="control-label text-md-right text-sm-left col-md-4">Date<span class="text text-danger">*</span></label>
                    <div class="col-md-8">
                        <div class="input-group date">
                            <input type="text" id="VoucherDate" autocomplete="off" placeholder="voucher date" tabindex="1" class="form-control">
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="offset-md-2 col-md-8">
                        <input type="button" id="btnGetVoucher" value="Get Voucher" class="btn btn-success" tabindex="2" />
                    </div>
                </div>
            </div>

        </form>
    </div>
</div>
<div class="modal fade" id="modal-xl">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Journal Voucher</h4>
                <button type="button" class="close text-danger" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <table id="vTable" class="table table-bordered table-hover table-sm">
                    <thead>
                        <tr>
                            <th>Account Code</th>
                            <th>Account Head</th>
                            <th>Description</th>
                            <th>Debit</th>
                            <th>Credit</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
            <div class="modal-footer justify-content-between">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button> 
            </div>
        </div>
    </div>
</div>
<div class="card" id="voucherList">
    <div class="card-header">
        Voucher List
    </div>
    <div class="card-body">
        <div>
            <form class="form-horizontal" id="frmSearchData">
                <div class="row">
                    <div class="form-group row">
                        <label class="control-label text-md-right text-sm-left col-md-4">From Date</label>
                        <div class="col-md-8">
                            <div class="input-group date">
                                <input type="text" id="FromDate" autocomplete="off" placeholder="voucher date" tabindex="3" class="form-control">
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="control-label text-md-right text-sm-left col-md-4">To Date</label>
                        <div class="col-md-8">
                            <div class="input-group date">
                                <input type="text" id="ToDate" autocomplete="off" placeholder="voucher date" tabindex="4" class="form-control">
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="offset-md-2 col-md-8">
                            <input type="button" id="btnSearch" value="Search" class="btn btn-success" tabindex="5" />
                        </div>
                    </div>
                </div>

            </form>
        </div>
        <table id="mTable" class="table table-bordered table-hover table-sm">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Company</th>
                    <th>Estate</th>
                    <th>Division</th>
                    <th>Description</th>
                    <th>Type</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>
<br />
<div class="card" id="journal_voucher">
    <div class="card-header">
        Journal Voucher
    </div>
    <div class="card-body">
        
    </div>
</div>
@section Scripts {
        <script src="~/js/voucher/voucher.js"></script>
        <script></script>
}

