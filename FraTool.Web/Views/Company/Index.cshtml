@model dShared.Model.Company
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row rowtop">
    <div class="col-md-12">
        <div class="card card-info card-outline collapsed-card" id="entry-ui">
            <div class="card-header">
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                        <i class="fas fa-plus"></i>
                    </button>
                </div>
                <h3 class="card-title">  Add Company</h3>
            </div>
            <div class="card-body">
                <div class="col-md-6">
                    <form asp-action="Create" class="form-horizontal">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input id="CompanyId" value="0" hidden type="text" />
                        <div class="form-group row">
                            <label asp-for="CompanyName" class="control-label text-md-right text-sm-left col-md-4"></label>
                            <div class="col-md-8">
                                <input asp-for="CompanyName" autocomplete="off" class="form-control" placeholder="company name" />
                                <span asp-validation-for="CompanyName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="offset-md-4 col-md-8">
                                <input type="button" id="btnSubmit" value="Save" class="btn btn-success" />
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row rowtop">
    <div class="col-md-12">
        <div class="card card-success card-outline">
            <div class="card-header">
                <h3 class="card-title">All Companies</h3>
            </div>
            <div class="card-body">
                <table class="table table-bordered table-hover" id="rTable">
                    <thead>
                        <tr class="bg-success">
                            <th>Company Name</th>
                            <th>Code</th>
                            <th>Status</th>
                            @*<th>Edit</th>*@
                            <th data-orderable="false"></th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/js/shared/company.js"></script>
    <script></script>
}


